{
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "deno.enable": true,
  "deno.lint": true,
  "deno.unstable": true,
  "deno.config": "deno.json",
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[json]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml",
    "files.insertFinalNewline": true,
    "editor.wordWrap": "on"
  }
}
